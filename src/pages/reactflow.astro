---
/**
 * React Flow visualization page for the Agentic Engineering roadmap.
 * Uses React Flow with Dagre layout for automatic hierarchical positioning.
 */

// Import the main island component
import { ReactFlowApp } from "../components/reactflow/ReactFlowApp";
import { ThemeToggle } from "../components/ThemeToggle";
import PostHogAnalytics from "../components/PostHogAnalytics.astro";

// Import all CSS styles
import "../styles/global.css";
import "../styles/roadmap.css";
import "../styles/mobile.css";
import "../styles/drawer.css";
import "../styles/reactflow.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="An interactive learning roadmap for understanding agentic AI, LLMs, and prompt engineering - React Flow visualization."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#1a1a2e" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Agentic Engineering for Humans - React Flow"
    />
    <meta
      property="og:description"
      content="An interactive learning roadmap using React Flow visualization."
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <title>Agentic Engineering - React Flow | Kilo Code</title>

    <!-- Analytics -->
    <PostHogAnalytics />

    <!-- Prevent flash of wrong theme by applying theme before render -->
    <script is:inline>
      (function () {
        const stored = localStorage.getItem("theme");
        if (stored === "light" || stored === "dark") {
          document.documentElement.setAttribute("data-theme", stored);
        }
        // If 'system' or nothing stored, let CSS media query handle it
      })();
    </script>
  </head>

  <body>
    <!-- Theme Toggle -->
    <ThemeToggle client:load />

    <!-- Main Content Area - Full App -->
    <main class="main-content">
      <!-- React Island: React Flow Roadmap -->
      <ReactFlowApp client:load />
    </main>

    <!-- Footer -->
    <footer class="site-footer">
      <div class="footer-content">
        <p class="footer-text">
          Made with üíõ by <a
            href="https://kilo.ai"
            target="_blank"
            rel="noopener noreferrer">Kilo Code</a
          >
        </p>
        <p class="footer-links">
          <a href="/">‚Üê Back to Original View</a>
        </p>
        <p class="footer-copyright">
          ¬© {new Date().getFullYear()} Kilo Code, Inc.
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Page-specific styles that augment global.css */

  /* Sticky footer layout using flexbox on body */
  :global(body) {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-content {
    flex: 1 0 auto;
    padding: 0;
    background: var(--color-bg-primary);
  }

  .site-footer {
    flex-shrink: 0;
    background: var(--color-bg-secondary);
    padding: 2rem 1.5rem;
    text-align: center;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-text {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin: 0 0 0.5rem 0;
  }

  .footer-text a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .footer-text a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  .footer-links {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0.5rem 0;
  }

  .footer-links a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  .footer-copyright {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
    margin: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .site-footer {
      padding: 1.5rem 1rem;
    }
  }
</style>
