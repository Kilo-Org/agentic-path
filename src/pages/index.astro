---
/**
 * Main page for the Agentic Engineering for Humans interactive learning roadmap.
 * This page integrates all components into a cohesive experience.
 */

// Import the main island component
import { RoadmapApp } from "../components/RoadmapApp";

// Import all CSS styles
import "../styles/global.css";
import "../styles/roadmap.css";
import "../styles/mobile.css";
import "../styles/drawer.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="An interactive learning roadmap for understanding agentic AI, LLMs, and prompt engineering - designed for humans who want to level up their AI skills."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#1a1a2e" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Agentic Engineering for Humans" />
    <meta
      property="og:description"
      content="An interactive learning roadmap for understanding agentic AI, LLMs, and prompt engineering."
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <title>Agentic Engineering for Humans | Kilo Code</title>
  </head>

  <body>
    <!-- Main Content Area - Full App -->
    <main class="main-content">
      <!-- Preact Island: Interactive Roadmap -->
      <RoadmapApp client:load />
    </main>

    <!-- Footer -->
    <footer class="site-footer">
      <div class="footer-content">
        <p class="footer-text">
          Made with ðŸ’› by <a
            href="https://kilo.ai"
            target="_blank"
            rel="noopener noreferrer">Kilo Code</a
          >
        </p>
        <p class="footer-copyright">
          Â© {new Date().getFullYear()} Kilo Code, Inc.
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Page-specific styles that augment global.css */

  /* Sticky footer layout using flexbox on body */
  :global(body) {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-content {
    flex: 1 0 auto;
    padding: 0;
    background: var(--color-bg-primary);
  }

  .site-footer {
    flex-shrink: 0;
    background: var(--color-bg-secondary);
    padding: 2rem 1.5rem;
    text-align: center;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-text {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin: 0 0 0.5rem 0;
  }

  .footer-text a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .footer-text a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  .footer-copyright {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
    margin: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .site-footer {
      padding: 1.5rem 1rem;
    }
  }
</style>
